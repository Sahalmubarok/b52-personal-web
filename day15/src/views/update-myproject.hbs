<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Add My Project</title>
    <link href="/assets/css/bootstrap.min.css" rel="stylesheet">
    <link rel=" stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css"
        integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA=="
        crossorigin="anonymous" referrerpolicy="no-referrer">
    <link rel="stylesheet" href="/assets/css/myproject.css">
</head>

<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid gap-3">
            <a class="navbar-brand ms-4" href="#">
                <img src="/assets/image/dw.png" style="height: 40px;">
            </a>
            <!-- toggler -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                {{#if isLogin}}
                <ul class="navbar-nav me-auto mb-2 mb-lg-0 gap-3">
                    <li class="nav-item">
                        <a class="nav-link " aria-current="page" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="/addmyproject">Add Project</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/testimonial">Testimonial</a>
                    </li>
                </ul>
                {{else}}
                <ul class="navbar-nav me-auto mb-2 mb-lg-0 gap-3">
                    <li class="nav-item">
                        <a class="nav-link " aria-current="page" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link disabled" href="/addmyproject">Add Project</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/testimonial">Testimonial</a>
                    </li>
                </ul>
                {{/if}}
                {{#if isLogin}}
                <ul class="navbar-nav me-2 mb-2 mb-lg-0 gap-3">
                    <li class="nav-item">
                        <span class="nav-link ">Welcome, {{user.name}}</span>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="/logout">Logout</a>
                    </li>
                </ul>
                {{else}}
                <ul class="navbar-nav me-2 mb-2 mb-lg-0 gap-3">
                    <li class="nav-item">
                        <a class="nav-link " aria-current="page" href="/register">Register</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/login">Login</a>
                    </li>
                </ul>
                {{/if}}
                <a href="/contact">
                    <button class="btn btn-primary me-4" id="btn-nav" type="submit">Contact Me</button>
                </a>
            </div>
        </div>
    </nav>

    <!-- Form Content -->
    <div class="d-flex justify-content-center">
        <form method="post" action="/update-myproject" class="form-ct mt-5 mb-5">
            <h2 class="mb-3"> UPDATE MY PROJECT</h2>
            <input type="hidden" name="id" value="{{data.id}}">
            <div class="mb-3">
                <label class="form-label">Project Name</label>
                <input type="text" id="inputProject" name="project" class="form-control" value="{{data.name}}">
            </div>
            <!-- date -->
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label">Start Date</label>
                    <input type="text" name="startDate" class="form-control" id="inputStart" value="{{data.start_date}}"
                        onfocus="(this.type='date')" onblur="if(!this.value)this.type='text'" />
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label">End Date</label>
                    <input type="text" name="endDate" class="form-control" id="inputEnd" value="{{data.end_date}}"
                        onfocus="(this.type='date')" onblur="if(!this.value)this.type='text'" />
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label">Decription</label>
                <textarea class="form-control" id="inputDesc" name="desc"
                    aria-label="With textarea"> {{data.description}}</textarea>
            </div>

            <div class="row mb-3">
                <label class="form-label">Technologies</label>
                <div class="row">
                    <div class="col-md-4 mb-3">
                        <div class="d-flex align-items-center gap-2 "> <input class="form-check-input mt-0"
                                id="inputNode" name="nodejs" type="checkbox" value="on" {{#includes
                                data.technologies 'nodejs' }}checked{{/includes}}> Node Js
                        </div>
                        <div class="d-flex align-items-center gap-2"> <input class="form-check-input mt-0"
                                id="inputNext" name="nextjs" type="checkbox" value="on" {{#includes
                                data.technologies 'nextjs' }}checked{{/includes}}> Next Js
                        </div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <div class="d-flex align-items-center gap-2"> <input class="form-check-input mt-0"
                                id="inputReact" name="reactjs" type="checkbox" value="on" {{#includes
                                data.technologies 'reactjs' }}checked{{/includes}}> React Js
                        </div>
                        <div class="d-flex align-items-center gap-2"> <input class="form-check-input mt-0"
                                id="inputTypeS" name="typescript" type="checkbox" value="on" {{#includes
                                data.technologies 'typescript' }}checked{{/includes}}> Typescript
                        </div>
                    </div>

                </div>
            </div>

            <div class="row">
                <label class="form-label">Upload Image</label>
                <!-- <div class="input-group custom-file-button mb-5" id="input-img">
                    <input type="file" class="form-control" id="inputImage">
                    <label class="input-group-text">
                        <img src="assets/icon/file.png" alt="file" />
                    </label>
                </div> -->
                <div class="input-group custom-file-button mb-5">
                    <label class="input-group-text" id="lbl-choose" for="inputImage">Choose</label>
                    <input type="file" class="form-control" id="inputImage" name="Image">
                    <label class="input-group-text">
                        <img src="/assets/icon/file.png" alt="file" />
                    </label>
                </div>

            </div>

            <div class="mb-3" id="btn-add">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </form>
    </div>


    <!-- <script src="/assets/js/myproject.js"></script> -->
    <script src="/assets/js/bootstrap.bundle.min.js"></script>
</body>

</html>